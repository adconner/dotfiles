export PATH=~/bin:~/.cabal/bin:$PATH
# export VIMINIT='let $MYVIMRC="$XDG_CONFIG_HOME/vim/vimrc" | source $MYVIMRC'
export LESSHISTFILE=$XDG_CACHE_HOME/lesshist
export WORDCHARS=$(echo $WORDCHARS | tr -d '/')
export PAGER='less -R'

alias vi="vim"
alias v="vim"

alias r="ranger"

alias info="info --vi"

# pass color through to less
alias less="less -R"

alias :q="exit"

# make fewer mistakes
alias mv="mv -iv"
alias cp="cp -iv"
alias ln="ln -iv"
