export HISTFILE=$XDG_CACHE_HOME/zsh/zsh_history
export LESSHISTFILE=$XDG_CACHE_HOME/lesshist
export WORDCHARS=$(echo $WORDCHARS | tr -d '/')
export EDITOR='vim'
export BROWSER='luakit'
export MAIL='~/.mail'
export PAGER='less -R'
export RANGER_LOAD_DEFAULT_RC='FALSE'

alias vi="vim"
alias v="vim"
alias r="ranger"
alias info="info --vi"
alias :q="exit"

# pass color through to less
alias less="less -R"

# make fewer mistakes
alias mv="mv -iv"
alias cp="cp -iv"
alias ln="ln -iv"
